@model School.Models.Instructor
@*@model School.Models.SchoolViewModel.InstructorIndexData*@
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Instructor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            LastName
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            FirstMidName
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstMidName)
        </dd>
        <dt class = "col-sm-2">
            HireDate
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HireDate)
        </dd>
        <dt class = "col-sm-2">
            Office
        </dt>
        <dd class = "col-sm-10">
            @*@Html.DisplayFor(model => model.OfficeAssignment.Location)*@
            @if(Model.OfficeAssignment != null)
                    {
                        @Model.OfficeAssignment.Location
                    }
        </dd>
        <dt class = "col-sm-2">
            Course
        </dt>
        <dd class = "col-sm-10">
            
            @foreach(var course in Model.CourseAssignments)
                    {
                        @course.Course.CourseID @course.Course.Title <br />
                    }
        </dd>
    </dl>
</div>